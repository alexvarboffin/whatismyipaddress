<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp">


    <!--#371F8D-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        tools:ignore="UselessParent">

        <View
            android:id="@+id/dot"
            android:layout_width="8dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:theme="@style/AppTheme.Dotter"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:textColor="@color/colorAccent"
            tools:text="0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/dot"
            android:layout_toRightOf="@id/dot"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="0dp"
            android:paddingStart="@dimen/activity_horizontal_margin">


            <TextView
                android:id="@+id/tv_label"
                style="@style/HeaderGroupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Charless" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/layout_group_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="127.0.0.1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!--<TextView-->
            <!--android:id="@+id/tv_port"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->

            <!--android:textAppearance="@style/Base.TextAppearance.AppCompat"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textStyle="bold"-->
            <!--tools:text="8888" />
            -->

            <ImageButton
                android:id="@+id/web"
                android:background="@drawable/button_background"
                android:layout_gravity="center"
                android:layout_width="@dimen/item_icon_width"
                android:layout_height="55dp"
                android:contentDescription="@string/action_copy"
                app:srcCompat="@drawable/ic_open_in_browser_black_24dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:background="@color/action_btn"
                android:id="@+id/icon"
                android:layout_width="@dimen/item_icon_width"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:contentDescription="@string/action_copy"
                app:srcCompat="@drawable/ic_content_copy_black_24dp"
                app:tint="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>