    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.HeaderView">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/title_ping"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back"
                style="@style/AppTheme_TButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/ic_left"
                android:padding="10dp" />

        </RelativeLayout>
        <!-- Ваш пользовательский макет будет вставлен сюда -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/def_background"
            android:orientation="vertical">


            <TextView
                android:id="@+id/url_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:padding="10dp"
                android:text="@string/domain_name"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/domainEditText"
                style="@style/EtIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/domain_com"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/request_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/request_type_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/request_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/scantypeQuick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/scantypeQuick" />

                <RadioButton
                    android:id="@+id/scantypeComplete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/scantypeComplete" />
            </RadioGroup>

            <!--        <com.walhalla.netdiscover.NonScrollListView-->
            <!--            android:id="@+id/listView"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginStart="2dp"-->
            <!--            android:layout_marginLeft="2dp"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:divider="@color/colorAccent"-->
            <!--            android:dividerHeight="1dp"-->
            <!--            android:scrollbarStyle="insideOverlay" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <!--            <TextView-->
                <!--                android:id="@+id/share_text"-->
                <!--                style="@style/ItemHeader"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="@string/share_program_text"-->
                <!--                android:textStyle="bold" />-->

                <!--            <Button-->
                <!--                android:id="@+id/share_button"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="@string/share_button_text" />-->

                <!--            <TextView-->
                <!--                android:id="@+id/domain_info_label"-->
                <!--                style="@style/ItemHeader"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginTop="16dp"-->

                <!--                android:textStyle="bold"-->
                <!--                tools:text="@string/app_name" />-->

                <!--            <TextView-->

                <!--                android:id="@+id/domain_name_text"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                tools:text="2ip.ru" />-->

                <!--            <TextView-->
                <!--                android:id="@+id/ip_address_text"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginBottom="16dp"-->
                <!--                android:text="195.201.201.32" />-->

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/ping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/amaranth"
            android:padding="4dp"
            android:text="@string/action_button_ping"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:ignore="ObsoleteSdkInt"
            tools:targetApi="lollipop" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.walhalla.netdiscover.NonScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:divider="@color/colorAccent"
                android:dividerHeight="1dp"
                android:scrollbarStyle="insideOverlay" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                app:SpinKit_Color="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/allOverflowMenu"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:paddingBottom="0dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ic_content_copy_black_24dp"
                    app:tint="@color/black"
                    tools:background="@android:color/holo_red_dark"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/allOverflowMenu0"
                    android:layout_width="55dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@null"
                    android:paddingBottom="0dp"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    app:tint="@color/black"
                    tools:background="@android:color/holo_red_dark"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <!-- android:animateLayoutChanges="true"-->

    <FrameLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F3F3" />

</LinearLayout>
