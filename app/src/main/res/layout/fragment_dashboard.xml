<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.HeaderView">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/alegreya_sans_sc_medium"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/check_connectivity"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--                app:drawableEnd="@drawable/ic_speed_test_wh"-->
                <!--                app:drawableRight="@drawable/ic_speed_test_wh"-->

                <Button
                    android:id="@+id/speedTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/transparent"

                    android:padding="0dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/signalStrengthTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/smileRating"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/amaranth"
                android:text="@string/dashboard_signal_strength"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/circleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signalStrengthTxt"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/signalPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_bg"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signalPercentage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="@string/dashboard_percentage"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/signalStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_bg"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signalStrength"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/amaranth"
                        android:text="dbm"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark" />

                </RelativeLayout>

            </LinearLayout>

            <com.hsalf.smileyrating.SmileyRating
                android:id="@+id/smileRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerView"
                android:layout_margin="10dp" />

            <RelativeLayout
                android:id="@+id/linkSpeedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/additionalInfoView"
                android:layout_marginBottom="4dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/code"
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/line1"
                    android:layout_toLeftOf="@+id/line1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/link_speed" />

                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorAccent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/linkValue"
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/line1"
                    android:layout_toRightOf="@+id/line1"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linkValue"
                    android:background="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/publicIPView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linkSpeedView"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF">

                <TextView
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_toStartOf="@+id/line2"
                    android:layout_toLeftOf="@+id/line2"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/public_ip" />

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorAccent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/publicIp"
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/line2"
                    android:layout_toRightOf="@+id/line2"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/publicIp"
                    android:background="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packetsRxView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/publicIPView"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF">

                <TextView
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_toStartOf="@+id/line3"
                    android:layout_toLeftOf="@+id/line3"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/download_speed" />

                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/rx"
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/line3"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_fast_forward" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rx"
                    android:background="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/packetsTxView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/packetsRxView"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF">

                <TextView
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/line4"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/upload_speed" />

                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorAccent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tx"
                    style="@style/TextViewPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/line4"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_fast_forward" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tx"
                    android:background="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/additionalInfoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circleView"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/additionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center_horizontal"
                    android:padding="7dp"
                    android:text="@string/connection_info_amp_stats"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </RelativeLayout>

            <com.walhalla.netdiscover.NonScrollListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/packetsTxView"
                android:divider="@color/colorAccent"
                android:dividerHeight="1dp"
                android:scrollbarStyle="insideOverlay" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
