<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="4dp">


    <!--#371F8D-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:background="#EAEAEA"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/control"
            android:layout_toLeftOf="@id/control"
            android:layout_toEndOf="@id/dot"
            android:layout_toRightOf="@id/dot"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/tv_label"
                style="@style/HeaderGroupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                tools:background="@android:color/darker_gray"
                tools:text="8888888" />

            <TextView
                style="@style/IpText"
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="127.0.0.1" />

        </LinearLayout>
        <!--        android:layout_below="@id/tv_label"-->
        <RelativeLayout
            android:id="@+id/control"
            android:layout_width="110dp"
            android:layout_height="match_parent"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/tv_port"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->

            <!--android:textAppearance="@style/Base.TextAppearance.AppCompat"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textStyle="bold"-->
            <!--tools:text="8888"/>-->

            <ImageButton
                android:id="@+id/web"
                android:layout_width="@dimen/item_icon_width"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/icon"
                android:layout_toLeftOf="@+id/icon"
                android:background="@drawable/button_web_background"
                android:contentDescription="@string/action_copy"
                app:srcCompat="@drawable/ic_ip_info"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/icon"
                android:layout_width="@dimen/item_icon_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/action_btn"
                android:contentDescription="@string/action_copy"
                app:srcCompat="@drawable/ic_content_copy_black_24dp"
                app:tint="@android:color/white" />
        </RelativeLayout>

        <View
            android:id="@+id/dot"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:textColor="@color/colorAccent"
            android:theme="@style/AppTheme.Dotter"
            tools:text="0" />
    </RelativeLayout>


</RelativeLayout>