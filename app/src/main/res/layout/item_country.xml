<?xml version="1.0" encoding="utf-8"?><!--#371F8D-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="2dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="2dp"
    android:background="@color/country_dot_color"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="#EAEAEA">

        <RelativeLayout
            android:id="@+id/liner07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:text="0">

            <ImageView
                android:id="@+id/icon01"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:contentDescription="@null"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:padding="4dp"
                tools:src="@mipmap/ic_launcher_round" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/btn"
            android:layout_toLeftOf="@id/btn"
            android:layout_toEndOf="@id/liner07"
            android:layout_toRightOf="@id/liner07"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            android:paddingRight="0dp">


            <TextView
                android:id="@+id/tv_label"
                style="@style/HeaderGroupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Charless" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/layout_group_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="127.0.0.1\n8888888888888\n\njjjj" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="@dimen/item_icon_width"
            android:layout_height="@dimen/dot_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/action_btn"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/tv_port"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->

            <!--android:textAppearance="@style/Base.TextAppearance.AppCompat"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textStyle="bold"-->
            <!--tools:text="8888" />-->

            <ImageButton
                android:id="@+id/icon"
                android:layout_width="@dimen/item_icon_width"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/action_btn"
                android:contentDescription="@string/action_copy"
                app:srcCompat="@drawable/ic_content_copy_black_24dp"
                app:tint="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>