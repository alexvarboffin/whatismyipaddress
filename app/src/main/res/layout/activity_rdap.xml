<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".features.rdap.RdapActivityBase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/timeoutHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="@string/rdap_timeoutHint"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/timeoutHint"
                android:fontFamily="@font/amaranth"
                android:text="[Example]"
                android:textAllCaps="true"
                android:textColor="#0D1C73"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <EditText
            android:id="@+id/ip"
            style="@style/EtIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/rdapDigits"
            android:hint="@string/enter_a_value"
            android:imeOptions="actionDone"
            android:inputType="textUri"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#111111"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>