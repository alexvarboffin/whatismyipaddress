<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".features.websniffer.WebSnifferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.HeaderView">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/alegreya_sans_sc_medium"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="@string/action_title_websniffer"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back"
                style="@style/AppTheme_TButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/ic_left"
                android:padding="10dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/url_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:padding="10dp"
            android:text="@string/url_label"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/url_edit_text"
            style="@style/EtIp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_enter_url"
            android:imeOptions="actionDone"
            android:inputType="textUri"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/request_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/request_type_label"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/request_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/get_radio_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/method_get" />

            <RadioButton
                android:id="@+id/post_radio_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/method_post" />

            <RadioButton
                android:id="@+id/head_radio_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/method_head" />
        </RadioGroup>

        <TextView
            android:id="@+id/http_version_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/http_version_label"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/http_version_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/http_versions"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/user_agent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/user_agent_label"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/user_agent_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/user_agents"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/submit_button"
            style="@style/ButtonAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:padding="4dp"
            android:text="@string/submit_button" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorPrimaryDark"
            tools:visibility="visible" />

        <!--        <com.walhalla.netdiscover.NonScrollListView-->
        <!--            android:id="@+id/listView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="2dp"-->
        <!--            android:layout_marginLeft="2dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:divider="@color/colorAccent"-->
        <!--            android:dividerHeight="1dp"-->
        <!--            android:scrollbarStyle="insideOverlay" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/share_text"
                style="@style/ItemHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share_program_text"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_button_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/domain_info_label"
                style="@style/ItemHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:textStyle="bold"
                tools:text="@string/app_name" />

            <TextView

                android:id="@+id/domain_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="2ip.ru" />

            <TextView

                android:id="@+id/ip_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="195.201.201.32" />

            <TextView
                android:id="@+id/request_header_label"
                style="@style/ItemHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/request_header_label"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/request_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="@string/request_header_text" />

            <TextView
                android:id="@+id/response_header_label"
                style="@style/ItemHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/response_header_label"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/response_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />

            <!--            <RelativeLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent">-->

            <!--                <androidx.viewpager2.widget.ViewPager2-->
            <!--                    android:id="@+id/viewPager"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent" />-->
            <!--                android:src="@drawable/ic_text"-->


            <!-- </RelativeLayout>-->

            <LinearLayout
                android:id="@+id/control"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageButton
                        android:id="@+id/textButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@color/action_btn"
                        android:src="@drawable/ic_dashboard_black_24dp"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/webButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@color/action_btn"
                        android:src="@drawable/ic_earth"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_background"
                    android:orientation="vertical"
                    android:padding="7dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewResult"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/webContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_background"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <WebView
                        android:id="@+id/webViewResult"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#423E3E" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>